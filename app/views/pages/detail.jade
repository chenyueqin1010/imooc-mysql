extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src=movie.flash,allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
				.panel
					.panel-heading
						h3 评论区
					.panel-body
						ul.media-list
							each item in comments
								li.media
									.pull-left
										if !item.to_user
											a.comment.reply(href="#comments",to_user="#{item.from_user}",comment_id="#{item.comment_id}")
												img.media-object(src="#{item.imgData}",style="width:32px;height:32px;")
									.media-body
										if !item.to_user
											h4.media-heading #{item.from_user}
												span.pull-right(style="font-size:14px;color:#9E9E9E;") —— #{moment(item.createAt).format("YYYY/MM/DD HH:mm:ss")}
										p #{item.content}
											br
											if !item.to_user
												a.btn.pull-right.glyphicon.glyphicon-thumbs-up(href="javascript:",comment_id=item.comment_id,movie_id=item.movie_id,commentId=item.id)  #{item.ups}
										if item.to_user
											.media(style="margin-left:32px;")
												.pull-left
													a.comment.reply(href="#comments",to_user="#{item.from_user}",comment_id="#{item.comment_id}")
														img.media-object(src="#{item.imgData}",style="width:32px;height:32px;")
												.media-body
													h4.media-heading
														span.pull-right(style="font-size:14px;color:#9E9E9E;") —— #{moment(item.createAt).format("YYYY/MM/DD HH:mm:ss")}
														| #{item.from_user}
														span.text-info &nbsp;回复&nbsp;
														| #{item.to_user}
													p #{item.reply_content}
								hr
							#comments
								form
									.form-group
										span.text-muted.speakTo
										textarea.form-control(row="3",style="resize:none;")
										a.btn.btn-primary.saveComment(href="javascript:") 提交
			.col-md-5
				dl.dl-horizontal
					input.movie_id(type="hidden",movie_id=movie.id)
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.director
					dt 国家
					dd= movie.country
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
	script(src="/public/js/comment.js")
