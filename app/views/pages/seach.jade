extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-3
					.thumbnail
						a(target="_blank",href="/movie/#{item.id}")
							img(src="#{item.poster}",alt="#item.title",style="height:350px;")
						.caption.text-center
							h4 #{item.title}
							p: a.btn.btn-primary.btn-block(target="_blank",href="/movie/#{item.id}",role="button") 立即播放
			if movies.length == 0
				h2  无搜索结果