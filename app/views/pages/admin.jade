extends ../layout

block content
	if user && user.role >0
		.container
			.row
				form.form-horiziontal(method="post",action="/admin/movie/save")
					input(type="hidden", name="movie[id]", value="#{movie.id}")
					.form-group.row
						label.col-sm-2.control-label.align-middle 豆瓣电影ID
						.col-sm-9
							input.form-control.douban(type="text")
						.col-sm-1.pull-right
							a.btn.btn-info.doubanBtn(style="position:relative;right:15px;") 开始同步
					.form-group.row
						label.col-sm-2.control-label.align-middle(for="inputTitle") 电影名字
						.col-sm-10
							input#inputTitle.form-control(type="text",name="movie[title]",value=movie.title,required)
					.form-group.row
						label.col-sm-2.control-label.align-middle 电影分类
						.col-sm-10
							select.form-control(name="movie[category]")
								option(value="others") --- 选择分类 ---
								each item in categories
									if movie.category == item.value
										option(value=movie.category,selected) #{item.name}
									if movie.category != item.value
										option(value=item.value) #{item.name}
					.form-group.row
						label.col-sm-2.control-label(for="inputDirector") 电影导演
						.col-sm-10
							input#inputDirector.form-control(type="text",name="movie[director]",value=movie.director,required)
					.form-group.row
						label.col-sm-2.control-label(for="inputCountry") 国家
						.col-sm-10
							input#inputCountry.form-control(type="text",name="movie[country]",value=movie.country,required)
					.form-group.row
						label.col-sm-2.control-label(for="inputPoster") 海报地址
						.col-sm-10
							input#inputPoster.form-control(type="text",name="movie[poster]",value=movie.poster,required)
					.form-group.row
						label.col-sm-2.control-label(for="inputFlash") 片源地址
						.col-sm-10
							input#inputFlash.form-control(type="text",name="movie[flash]",value=movie.flash,required)
					.form-group.row
						label.col-sm-2.control-label(for="inputYear") 上映年份
						.col-sm-10
							input#inputYear.form-control(type="text",name="movie[year]",value=movie.year,required)
					.form-group.row
						label.col-sm-2.control-label(for="inputSummary") 电影简介
						.col-sm-10
							textarea#inputSummary.form-control(name="movie[summary]", rows="4",style="resize:none;",required) #{movie.summary}
					.form-group.row
						.col-sm-offset-2.col-sm-10
							button.btn.btn-primary.btn-block(type="submit") 提交
	script(src="/public/js/douban.js")
						